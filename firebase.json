{
  "hosting": {
    "public": "site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/create-checkout",
        "function": "createCheckout"
      },
      {
        "source": "/api/webhook",
        "function": "webhook"
      },
      {
        "source": "/api/download",
        "function": "download"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}